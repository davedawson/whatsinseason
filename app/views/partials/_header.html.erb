<header>
  <% if current_user.try(:admin?) %>
    <div class="god-mode"><p>GOD MODE</p>
      <p class="current-user">Logged in as <strong><%= current_user.email %></strong></p>
      <ul>
        <li><%= link_to "View Foods", foods_path %></li>
        <li><%= link_to "Add Foods", new_food_path %></li>
        <li><%= link_to 'Edit profile', edit_user_registration_path %></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      </ul>

    </div>
  <% end %>
  <nav>
    <ul class="locations">
      <% @locations.each do |location| %>
      <li><a href="#"><%= location.title %></a></li>
      <% end %>
    </ul>
    <h1><a href="/">What's in Season Today?</a></h1>
    <p class="season">Spring</p>
  </nav>
</header>